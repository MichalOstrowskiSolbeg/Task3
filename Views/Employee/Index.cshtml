@model IEnumerable<Task3.DbModels.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="text-center">
    <h1 class="display-4">Employees</h1>
</div>
<div>
    <table class="table-list">
        <thead>
            <tr>
                <th class="uppercase text-center">First Name</th>
                <th class="uppercase text-center">Last Name</th>
                <th class="uppercase text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td class="text-center">@x.FirstName</td>
                    <td class="text-center">@x.LastName</td>
                    <td>
                        <ul class="list-actions">
                            <li>
                                @Html.ActionLink("Details", "Details", new { Id = x.Id }, new { @class = "list-actions-button-details" })
                            </li>
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>