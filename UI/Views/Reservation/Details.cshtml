@model Task3.DTO.Responses.ReservationResponse

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1 class="display-4">Reservation details</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label">Employee</label>
                <input asp-for="Employee" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Workplace" class="control-label">Workplace</label>
                <input asp-for="Workplace" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="DateFrom" class="control-label">Date From</label>
                <input asp-for="DateFrom" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="DateTo" class="control-label">Date To</label>
                <input asp-for="DateTo" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="WhenMade" class="control-label">When Made</label>
                <input asp-for="WhenMade" class="form-control" readonly/>
            </div>
        </form>
        <div class="my">
            @Html.ActionLink("Edit", "Edit", new { Id = Model.ID }, new { @class = "button-edit" })
        </div>
        <div class="my">
            <a class="button-cancel" asp-action="Index">Back</a>
        </div>
    </div>
</div>